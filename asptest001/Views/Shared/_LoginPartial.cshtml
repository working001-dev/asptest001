
@if (Session["InsuredKey"] != null && Session["InsuredKey"].ToString() == "1")
{

    using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", /*, onSubmit = "submit_form(event)"*/ }))
    {
        <ul id="member-login" class="nav navbar-nav navbar-right nav-login">
            <li><span class="head-login">@Session["MemberName"]<button type='submit' class='btn-logout'><span class="glyphicon glyphicon-log-out"></span></button></span></li>
            @*<li></li>*@
        </ul> 
    }
}
else
{
    using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginForm", @class = "navbar-right",  }))
    {
        <ul id="member-login" class="nav navbar-nav navbar-right nav-login">
            <li><input class="form-control" name="uid" type="text" placeholder="Username" /></li>
            <li><input class="form-control" name="pass" type="password" placeholder="Password" /></li> 
            <li><button class="btn" type="button" onclick = "submit_form(this)" >login</button></li>
        </ul>
    }
}
